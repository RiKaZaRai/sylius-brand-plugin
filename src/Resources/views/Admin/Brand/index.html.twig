{% extends '@SyliusAdmin/layout.html.twig' %}

{% block content %}
    <h1 class="ui header">Marques</h1>

    <a href="{{ path('admin_brand_create') }}" class="ui labeled icon primary button">
        <i class="plus icon"></i> Ajouter une marque
    </a>

    <table class="ui celled table">
        <thead>
            <tr>
                <th>Logo</th>
                <th>Code</th>
                <th>Nom</th>
                <th>Enabled</th>
                <th>Position</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for brand in brands %}
                <tr>
                    <td>
                        {% if brand.logoPath %}
                            <img src="{{ asset('uploads/brands/' ~ brand.logoPath) }}" alt="{{ brand.name }}" style="max-height:50px;">
                        {% endif %}
                    </td>
                    <td>{{ brand.code }}</td>
                    <td>{{ brand.name }}</td>
                    <td>{{ brand.enabled ? 'Oui' : 'Non' }}</td>
                    <td>{{ brand.position }}</td>
                    <td>
                        <a href="{{ path('admin_brand_edit', {id: brand.id}) }}" class="ui small button">Modifier</a>

                        <form method="post" action="{{ path('admin_brand_delete', {id: brand.id}) }}" style="display:inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer cette marque ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ brand.id) }}">
                            <button class="ui red small button">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucune marque trouv√©e.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

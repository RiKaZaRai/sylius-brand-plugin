{% if data and data.logoPath %}
    <img src="{{ asset(data.logoPath) }}" 
         alt="{{ data.name ?: 'Brand logo' }}" 
         style="height: 50px; max-width: 100px; object-fit: contain;"
         class="ui image">
{% else %}
    <div class="ui placeholder segment" style="height: 50px; width: 100px; display: flex; align-items: center; justify-content: center;">
        <i class="image outline icon"></i>
    </div>
{% endif %}

{{ form_errors(form) }}

<div class="ui segment">
    <h4 class="ui dividing header">{{ 'sylius.ui.details'|trans }}</h4>
    {{ form_row(form.code) }}
    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
    <div class="two fields">
        {{ form_row(form.enabled) }}
        {{ form_row(form.position) }}
    </div>
</div>

{{ form_rest(form) }}
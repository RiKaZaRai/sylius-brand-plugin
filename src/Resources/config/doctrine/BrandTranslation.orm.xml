<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Rika\SyliusBrandPlugin\Entity\BrandTranslation" table="sylius_brand_product_translation">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string" length="255"/>
        <field name="slug" type="string" length="255">
            <gedmo:slug unique="true" style="lower" updatable="false" separator="-">
                <gedmo:slug-handler-option name="field" value="name"/>
            </gedmo:slug>
        </field>
        <field name="description" type="text" nullable="true"/>
        <field name="metaTitle" type="string" length="255" nullable="true"/>
        <field name="metaDescription" type="text" nullable="true"/>
    </entity>
</doctrine-mapping>

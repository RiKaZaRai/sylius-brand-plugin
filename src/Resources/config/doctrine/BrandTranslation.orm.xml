<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Rika\SyliusBrandPlugin\Entity\BrandTranslation" table="rika_brand_translation">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string" length="255"/>
        <field name="slug" type="string" length="255" nullable="true"/>
        <field name="description" type="text" nullable="true"/>
        <field name="metaKeywords" type="text" nullable="true"/>
        <field name="metaDescription" type="text" nullable="true"/>

        <!-- Link to Brand -->
        <many-to-one field="translatable" target-entity="Rika\SyliusBrandPlugin\Entity\Brand" inversed-by="translations">
            <join-column name="translatable_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>

        <!-- Locale field -->
        <field name="locale" type="string" length="12"/>
        
        <indexes>
            <index name="brand_translation_uniq_trans" columns="translatable_id,locale"/>
        </indexes>
    </entity>
</doctrine-mapping>